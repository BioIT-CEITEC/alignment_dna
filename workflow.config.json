{
  "workflow_description": {
    "name": "alignment_DNA",
    "version": 1.0,
    "label": "Alignment DNA",
    "type": "alignment_dna",
    "inputs": "*/{sample}*fastq.gz",
    "outputs": [
      "mapped/{sample}.bam",
      "mapped/{sample}.bam.bai",
      "logs/{sample}/*",
      "qc_reports/*"
    ],
    "report_index": "qc_reports/all_samples/alignment_DNA_multiqc/multiqc.html",
    "reports":[
       "qc_reports/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
    "UMI"
  ],
  "gui_params": {
    "primary": {
      "umi_usage": {
        "label": "UMI usage",
        "type": "enum",
        "default": "mark_duplicates",
        "list": {
          "no": "Don't use UMI",
          "mark_duplicates": "Mark duplicates",
          "umi_concensus": "UMI concensus"
        },
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": true,
            "values": {
              "UMI": "no_umi"
            }
          }
        }
      },
      "lib_ROI": {
        "label": "Regions of interest",
        "type": "enum",
        "default": "wgs",
        "list": ##INCLUDE:resources_info/lib_ROI.json,##
      },
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": ##INCLUDE:resources_info/default_reference.json,##,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "lib_ROI": "wgs"
            }
          }
        },
        "list": ##INCLUDE:resources_info/reference.json##
      }
    },
    "detailed": {
      "trim_adapters": {
        "label": "Trim adapters",
        "type": "bool",
        "default": true
      },
      "mark_duplicates": {
        "label": "Mark duplicates",
        "type": "bool",
        "default": true
      },
      "remove_duplicates": {
        "label": "Remove duplicates",
        "type": "bool",
        "default": true
      },
      "keep_not_markDups_bam": {
        "label": "Keep not_markDups_bam file",
        "type": "bool",
        "default": false
      },
      "umi_consensus_min_support": {
        "label": "UMI consensus min_support",
        "type": "int",
        "default": 1,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "umi_usage": "umi_concensus"
            }
          }
        }
      }
    }
  }
}

